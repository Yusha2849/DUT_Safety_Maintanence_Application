<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:paddingTop="30dp"
        android:src="@drawable/dut_user"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/registrationMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_to_your_account"
        android:textSize="30sp"
        android:fontFamily="@font/bebasneue_regular"
        android:letterSpacing="0.2"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>

    <!-- Email TextInputLayout -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loginemaillabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/loginemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:fontFamily="@font/poppins_regular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password TextInputLayout -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loginpasswordlabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/loginpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:fontFamily="@font/poppins_regular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/loginButton"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Log In"
        app:backgroundTint="@color/button_purple"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Forgot password?"
        android:textColor="@color/black"
        android:clickable="true"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/registerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Don't have an account? Sign up."
        android:textColor="@color/black"
        android:clickable="true"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/sponsored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="0dp"
        android:textSize="15dp"
        android:text="Powered by DUT Safety and Rescue"
        android:textColor="@color/black"
        android:clickable="true"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_regular"/>

</LinearLayout>
